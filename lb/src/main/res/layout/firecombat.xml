<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dice="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:id="@+id/layoutFireAttackerDefender">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25dp"
                android:minHeight="25dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:id="@+id/layoutFireAttacker">
                <TextView
                    android:text="Attacker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFireAttacker"
                    style="@style/group_text" />
                <LinearLayout
                    android:id="@+id/layoutFireAttackerValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1.0">

                    <Button
                        android:id="@+id/btnFireAttackerPrev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_toRightOf="@+id/lblFireAttackerValue"
                        android:background="@drawable/ic_action_previous_item"/>
                    <EditText
                        android:id="@+id/textFireAttackerValue"
                        android:inputType="numberDecimal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/btnFireAttackerPrev"
                        android:layout_alignTop="@+id/btnFireAttackerPrev"
                        android:layout_weight=".70"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/btnFireAttackerNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_alignTop="@+id/btnFireAttackerPrev"
                        android:layout_toRightOf="@+id/textFireAttackerValue"
                        android:background="@drawable/ic_action_next_item"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/layoutFireAttackerValues"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:gravity="center"
                        android:paddingTop="19dp">
                    <Button
                            android:id="@+id/btnFireAttackerValue4"
                            android:text="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireAttackerValue6"
                            android:text="6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireAttackerValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireAttackerValue9"
                            android:text="9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireAttackerValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireAttackerValue12"
                            android:text="12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireAttackerValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireAttackerValue16"
                            android:text="16"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireAttackerValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireAttackerValue18"
                            android:text="18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireAttackerValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/layoutFireAttackerMods"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1.0" 
                    android:paddingTop="10dp">
                    <ToggleButton
                        android:id="@+id/btnFireAttacker13"
                        android:textOff="1/3"
                        android:textOn="x1/3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        style="@style/toggle_text" />
                    <ToggleButton
                        android:id="@+id/btnFireAttacker12"
                        android:textOff="1/2"
                        android:textOn="x1/2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        android:layout_alignTop="@+id/btnFireAttacker13"
                        android:layout_toRightOf="@+id/btnFireAttacker13"
                        style="@style/toggle_text" />
                    <ToggleButton
                        android:id="@+id/btnFireAttacker32"
                        android:textOff="3/2"
                        android:textOn="x3/2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        android:layout_alignTop="@+id/btnFireAttacker13"
                        android:layout_toRightOf="@+id/btnFireAttacker12"
                        style="@style/toggle_text" />
                    <ToggleButton
                        android:id="@+id/btnFireAttackerCann"
                        android:textOff="Cannister"
                        android:textOn="&gt;Cannister"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".40"
                        android:layout_alignTop="@+id/btnFireAttacker13"
                        android:layout_toRightOf="@+id/btnFireAttacker32"
                        style="@style/toggle_text" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25dp"
                android:minHeight="25dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"                
                android:id="@+id/layoutFireDefender">
                <TextView
                    android:text="Defender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFireDefender"
                    style="@style/group_text" />
                <LinearLayout
                    android:id="@+id/layoutFireDefenderValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1.0">

                    <Button
                        android:id="@+id/btnFireDefenderPrev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_toRightOf="@+id/lblFireDefenderValue"
                        android:background="@drawable/ic_action_previous_item"/>
                    <EditText
                        android:id="@+id/textFireDefenderValue"
                        android:inputType="numberDecimal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/btnFireDefenderPrev"
                        android:layout_alignTop="@+id/btnFireDefenderPrev"
                        android:layout_weight=".70"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/btnFireDefenderNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_alignTop="@+id/btnFireDefenderPrev"
                        android:layout_toRightOf="@+id/textFireDefenderValue"
                        android:background="@drawable/ic_action_next_item"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/layoutFireDefenderValues"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:gravity="center"
                        android:paddingTop="19dp">
                    <Button
                            android:id="@+id/btnFireDefenderValue4"
                            android:text="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireDefenderValue6"
                            android:text="6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireDefenderValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireDefenderValue9"
                            android:text="9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireDefenderValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireDefenderValue12"
                            android:text="12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireDefenderValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireDefenderValue14"
                            android:text="14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireDefenderValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <Button
                            android:id="@+id/btnFireDefenderValue16"
                            android:text="16"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:layout_alignTop="@+id/btnFireDefenderValue4"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/layoutFireDefenderIncr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1.0">
                    <TextView
                        android:text="Incr"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_toLeftOf="@+id/btnFireDefenderIncrPrev"
                        android:id="@+id/lblFireDefenderIncr"
                        android:paddingStart="10dp" />
                    <Button
                        android:id="@+id/btnFireDefenderIncrPrev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_toRightOf="@+id/lblFireDefenderIncr"
                        android:background="@drawable/ic_action_previous_item"/>
                    <EditText
                        android:id="@+id/textFireDefenderIncr"
                        android:inputType="numberDecimal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/btnFireDefenderIncrPrev"
                        android:layout_alignTop="@+id/btnFireDefenderIncrPrev"
                        android:layout_weight=".55"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/btnFireDefenderIncrNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".15"
                        android:layout_alignTop="@+id/btnFireDefenderIncrPrev"
                        android:layout_toRightOf="@+id/textFireDefenderIncr"
                        android:background="@drawable/ic_action_next_item"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/layoutFireOdds">
            <LinearLayout
                android:id="@+id/layoutFireOddsSelect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0">
                <TextView
                    android:text="Odds"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_toLeftOf="@+id/spinFireOdds"
                    android:id="@+id/lblFireOdds" />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:layout_toRightOf="@+id/lblFireOdds"
                    android:id="@+id/spinFireOdds"/>

                <include
                    layout="@layout/fireresults"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutFireDice"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/imgFireDie1"
                    android:src="@drawable/die6_whiteblack_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
                <ImageView
                    android:id="@+id/imgFireDie2"
                    android:src="@drawable/die6_redwhite_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/imgFireDie1"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
                <ImageView
                    android:id="@+id/imgFireDie3"
                    android:src="@drawable/die6_bluewhite_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/imgFireDie2"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
                <ImageView
                    android:id="@+id/imgFireDie4"
                    android:src="@drawable/die6_blackwhite_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/imgFireDie3"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
                <ImageView
                    android:id="@+id/imgFireDie5"
                    android:src="@drawable/die6_blackred_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/imgFireDie4"
                    android:clickable="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />
                <Button
                    android:id="@+id/btnFireDiceRoll"
                    android:text="Roll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btnFireDefenderIncrPrev"
                    android:layout_toRightOf="@+id/imgFireDie5"
                    android:background="@drawable/red_button"
                    style="@style/button_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFireMods"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0">
                <Button
                    android:id="@+id/btnFireMinus6"
                    android:text="-6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:background="@drawable/blue_button"
                    style="@style/button_text" />
                <Button
                    android:id="@+id/btnFireMinus3"
                    android:text="-3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_alignTop="@+id/btnFireMinus6"
                    android:background="@drawable/blue_button"
                    android:layout_toRightOf="@+id/btnFireMinus6"
                    style="@style/button_text" />
                <Button
                    android:id="@+id/btnFireMinus1"
                    android:text="-1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_alignTop="@+id/btnFireMinus6"
                    android:background="@drawable/blue_button"
                    android:layout_toRightOf="@+id/btnFireMinus3"
                    style="@style/button_text" />
                <TextView
                    android:text=" / "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".05"
                    android:layout_toRightOf="@+id/btnFireMinus1"
                    android:id="@+id/lblFireDiv" android:gravity="center_horizontal" />
                <Button
                    android:id="@+id/btnFirePlus1"
                    android:text="+1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:background="@drawable/blue_button"
                    android:layout_toRightOf="@+id/lblFireDiv"
                    style="@style/button_text" />
                <Button
                    android:id="@+id/btnFirePlus3"
                    android:text="+3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_alignTop="@+id/btnFireMinus6"
                    android:background="@drawable/blue_button"
                    android:layout_toRightOf="@+id/lblFirePlus1"
                    style="@style/button_text" />
                <Button
                    android:id="@+id/btnFirePlus6"
                    android:text="+6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_alignTop="@+id/btnFireMinus6"
                    android:layout_toRightOf="@+id/lblFirePlus3"
                    android:background="@drawable/blue_button"
                    style="@style/button_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
